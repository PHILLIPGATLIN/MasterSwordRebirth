//-----------------------------------------------------------------------------
//	CHARIMPORT.VPC - Imports encrypted charfiles from the old FN system!
//	Project Script
//-----------------------------------------------------------------------------

$Macro SRCDIR		"..\.."
$Macro OUTBINDIR	"$SRCDIR\build"

$Include "$SRCDIR\vpc_scripts\source_exe_con_base.vpc"

$Configuration
{	
	$Compiler
	{
		$AdditionalIncludeDirectories	"$BASE;.\;$SRCDIR\game\server;$SRCDIR\game\shared;$SRCDIR\game\shared\ms;$SRCDIR\game\shared\http;..\..\thirdparty"
		$PreprocessorDefinitions		"$BASE;NOT_HLDLL;USES_HTTPLIB"
		$PreprocessorDefinitions		"$BASE;SWDS" [$POSIX]
	}

	$Linker
	{
		$AdditionalDependencies				"$BASE ws2_32.lib odbc32.lib odbccp32.lib winmm.lib wsock32.lib" [$WIN32]
	}
}

$Project "charimport"
{
	$Folder	"Source Files"
	{
		$File "$SRCDIR\game\shared\ms\msfileio.cpp"
		$File "$SRCDIR\game\shared\ms\stackstring.cpp"
		$File "..\..\thirdparty\base64\base64.cpp"
		$File "$SRCDIR\game\shared\http\SimpleRequestHandler.cpp"
		$File "charimport.cpp"
	}
}